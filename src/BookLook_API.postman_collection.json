							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.books && response.books.length > 0) {",
									"        pm.collectionVariables.set('book_id', response.books[0].id);",
