# BookLook Development Environment Configuration
# Copy this file to .env.development and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="BookLook Dev"
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_USER=bookuser
POSTGRES_PASSWORD=bookpass123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=book_library_dev

# PostgreSQL Performance Tuning (lighter for development)
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAX_CONNECTIONS=50

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
BACKEND_WORKERS=2
SECRET_KEY=dev-secret-key-not-for-production

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000

# API URL (used by frontend to connect to backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production

# =============================================================================
# NGINX CONFIGURATION (if using nginx profile)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. These are development defaults - safe for local development
# 2. Do not use these values in production
# 3. You can run services locally or use Docker Compose
# 4. For Docker: docker-compose -f docker-compose.prod.yml --env-file .env.development up
