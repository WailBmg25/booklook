# BookLook Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="BookLook Staging"
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_USER=bookuser
POSTGRES_PASSWORD=CHANGE_ME_STAGING_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=book_library_staging

# PostgreSQL Performance Tuning (moderate for staging)
POSTGRES_SHARED_BUFFERS=4GB
POSTGRES_EFFECTIVE_CACHE_SIZE=12GB
POSTGRES_MAINTENANCE_WORK_MEM=1GB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAX_CONNECTIONS=100

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_MAX_MEMORY=2gb

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
BACKEND_WORKERS=4
SECRET_KEY=CHANGE_ME_STAGING_SECRET_KEY

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=https://staging.yourdomain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000

# API URL (used by frontend to connect to backend)
NEXT_PUBLIC_API_URL=https://staging.yourdomain.com/api

# NextAuth Configuration
NEXTAUTH_URL=https://staging.yourdomain.com
NEXTAUTH_SECRET=CHANGE_ME_STAGING_NEXTAUTH_SECRET

# =============================================================================
# NGINX CONFIGURATION (if using nginx profile)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# STAGING NOTES
# =============================================================================
# 1. Use production-like settings but with reduced resources
# 2. Generate unique secrets different from production
# 3. Use staging subdomain or separate domain
# 4. Test deployment procedures here before production
# 5. Can use production data snapshots for realistic testing
